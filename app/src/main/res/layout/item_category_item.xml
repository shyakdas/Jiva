<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/demo" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@id/category_image"
            android:layout_alignTop="@id/category_image"
            android:layout_alignEnd="@id/category_image"
            android:layout_alignBottom="@id/category_image"
            android:layout_marginBottom="10dp"
            android:gravity="bottom|center"
            android:text="@string/outdoor"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>